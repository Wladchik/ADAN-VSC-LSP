{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ADAN",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functionCall" },
    { "include": "#programDeclaration" },
    { "include": "#includeStatement" },
    { "include": "#controlKeywords" },
    { "include": "#storageKeywords" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.adn",
          "match": "//.*$"
        },
        {
          "name": "comment.block.adn",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "name": "comment.block.adn",
              "match": "."
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.adn",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.adn",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.adn",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.adn",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.adn",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.adn",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "functionCall": {
      "patterns": [
        {
          "name": "meta.function-call.adn",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": {
              "name": "entity.name.function.adn"
            }
          }
        }
      ]
    },
    "programDeclaration": {
      "patterns": [
        {
          "name": "meta.program.adn",
          "match": "\\b(program)(::)(void|int|string|char|bool|float|null)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "storage.type.class.adn"
            },
            "2": {
              "name": "punctuation.accessor.adn"
            },
            "3": {
              "name": "storage.type.adn"
            },
            "4": {
              "name": "entity.name.function.adn"
            }
          }
        }
      ]
    },
    "includeStatement": {
      "patterns": [
        {
          "name": "meta.include.adn",
          "match": "^\\s*(include)\\s+([a-zA-Z_][a-zA-Z0-9_\\.]*)(;)?",
          "captures": {
            "1": {
              "name": "keyword.control.import.adn"
            },
            "2": {
              "name": "entity.name.type.module.adn"
            },
            "3": {
              "name": "punctuation.terminator.adn"
            }
          }
        }
      ]
    },
    "controlKeywords": {
      "patterns": [
        {
          "name": "keyword.control.conditional.adn",
          "match": "\\b(if|else)\\b"
        },
        {
          "name": "keyword.control.loop.adn",
          "match": "\\b(while|for)\\b"
        },
        {
          "name": "keyword.control.flow.adn",
          "match": "\\b(return|break|continue)\\b"
        }
      ]
    },
    "storageKeywords": {
      "patterns": [
        {
          "name": "storage.type.class.adn",
          "match": "\\b(program)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.adn",
          "match": "\\b(string|int|void|char|bool|float)\\b"
        },
        {
          "name": "constant.language.null.adn",
          "match": "\\b(null|true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.adn",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.adn",
          "match": "(=)"
        },
        {
          "name": "keyword.operator.arithmetic.adn",
          "match": "(\\+|\\-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.logical.adn",
          "match": "(&&|\\|\\||!)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.accessor.adn",
          "match": "::"
        },
        {
          "name": "punctuation.terminator.adn",
          "match": ";"
        },
        {
          "name": "punctuation.separator.comma.adn",
          "match": ","
        },
        {
          "name": "punctuation.definition.block.adn",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.parameters.adn",
          "match": "[()]"
        },
        {
          "name": "punctuation.definition.array.adn",
          "match": "[\\[\\]]"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.adn",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.adn"
}
